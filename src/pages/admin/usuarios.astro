import AdminLayout from "../../layouts/AdminLayout.astro";
import { supabase, isSupabaseConfigured } from "../../lib/supabase";

// Verificar si Supabase est√° configurado
if (!isSupabaseConfigured) {
    return Astro.redirect("/admin/login?error=config");
}

// Obtener usuarios desde auth.users (requiere service_role key)
// Como alternativa, obtenemos los emails √∫nicos de los pedidos
const { data: ordersData } = await supabase
    .from("orders")
    .select("customer_email, customer_name, customer_phone, created_at")
    .order("created_at", { ascending: false });

// Agrupar por email para obtener usuarios √∫nicos con estad√≠sticas
const usersMap = new Map<
    string,
    {
        email: string;
        name: string;
        phone: string | null;
        ordersCount: number;
        lastOrder: string;
        firstOrder: string;
    }
>();

if (ordersData) {
    for (const order of ordersData) {
        const existing = usersMap.get(order.customer_email);
        if (existing) {
            existing.ordersCount++;
            // El primer pedido en la iteraci√≥n es el m√°s reciente (ordenado desc)
            if (!existing.lastOrder) {
                existing.lastOrder = order.created_at;
            }
            existing.firstOrder = order.created_at;
        } else {
            usersMap.set(order.customer_email, {
                email: order.customer_email,
                name: order.customer_name,
                phone: order.customer_phone,
                ordersCount: 1,
                lastOrder: order.created_at,
                firstOrder: order.created_at,
            });
        }
    }
}

const users = Array.from(usersMap.values()).sort(
    (a, b) => new Date(b.lastOrder).getTime() - new Date(a.lastOrder).getTime(),
);

// Obtener suscriptores de newsletter
const { data: subscribers } = await supabase
    .from("newsletter_subscribers")
    .select("email, subscribed_at")
    .order("subscribed_at", { ascending: false });

const subscriberEmails = new Set(subscribers?.map((s) => s.email) || []);

// Funci√≥n para formatear fecha
function formatDate(dateStr: string): string {
    return new Date(dateStr).toLocaleDateString("es-ES", {
        day: "2-digit",
        month: "short",
        year: "numeric",
    });
}
