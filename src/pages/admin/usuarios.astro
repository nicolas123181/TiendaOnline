<script>
    // B√∫squeda y filtrado
    const searchInput = document.getElementById(
        "search-input",
    ) as HTMLInputElement;
    const filterBtns = document.querySelectorAll(".filter-btn");
    const tableRows = document.querySelectorAll("#users-table tbody tr");

    let currentFilter = "all";
    let searchTerm = "";

    function applyFilters() {
        tableRows.forEach((row) => {
            const email = row.getAttribute("data-email") || "";
            const name = row.getAttribute("data-name") || "";
            const isRecurring = row.getAttribute("data-recurring") === "true";
            const isNewsletter = row.getAttribute("data-newsletter") === "true";

            // Filtro de b√∫squeda
            const matchesSearch =
                searchTerm === "" ||
                email.includes(searchTerm.toLowerCase()) ||
                name.includes(searchTerm.toLowerCase());

            // Filtro de tipo
            let matchesFilter = true;
            if (currentFilter === "recurring") {
                matchesFilter = isRecurring;
            } else if (currentFilter === "newsletter") {
                matchesFilter = isNewsletter;
            }

            (row as HTMLElement).style.display =
                matchesSearch && matchesFilter ? "" : "none";
        });
    }

    searchInput?.addEventListener("input", (e) => {
        searchTerm = (e.target as HTMLInputElement).value;
        applyFilters();
    });

    filterBtns.forEach((btn) => {
        btn.addEventListener("click", () => {
            filterBtns.forEach((b) => b.classList.remove("active"));
            btn.classList.add("active");
            currentFilter = btn.getAttribute("data-filter") || "all";
            applyFilters();
        });
    });
</script>
