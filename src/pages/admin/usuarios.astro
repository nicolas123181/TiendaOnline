                                    data-name={user.name.toLowerCase()}
                                    data-recurring={
                                        user.ordersCount >= 2 ? "true" : "false"
                                    }
                                    data-newsletter={
                                        subscriberEmails.has(user.email)
                                            ? "true"
                                            : "false"
                                    }
                                >
                                    <td class="user-cell">
                                        <div class="user-avatar">
                                            {user.name.charAt(0).toUpperCase()}
                                        </div>
                                        <div class="user-info">
                                            <span class="user-name">
                                                {user.name}
                                            </span>
                                            {user.ordersCount >= 3 && (
