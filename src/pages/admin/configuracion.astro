const lowStockThreshold = (await getSetting("low_stock_threshold")) || "5";

// Popup configuration
const popupEnabled = (await getSetting("popup_enabled")) || "true";
const popupTitle =
    (await getSetting("popup_title")) || "10% de Descuento Exclusivo";
const popupMessage =
    (await getSetting("popup_message")) ||
    "Suscr铆bete a nuestra newsletter y recibe un descuento especial en tu primera compra.";
const popupPromoCode = (await getSetting("popup_promo_code")) || "BIENVENIDO10";
const popupDiscount = (await getSetting("popup_discount")) || "10";

let success = false;
let error = "";

// Procesar formulario
if (Astro.request.method === "POST") {
    try {
        const formData = await Astro.request.formData();
        const action = formData.get("action");

        if (action === "flash_offers") {
            const flashOffers = formData.get("flash_offers") === "on";
            // Actualizar configuraci贸n de ofertas flash
            const { error: upsertError } = await supabase
                .from("app_settings")
                .upsert(
                    {
                        key: "flash_offers_enabled",
                        value: flashOffers.toString(),
                        updated_at: new Date().toISOString(),
                    },
                    { onConflict: "key" },
                );

            if (upsertError) {
                error = `Error al guardar: ${upsertError.message}`;
            } else {
                success = true;
            }
        } else if (action === "stock_threshold") {
            const threshold = formData.get("low_stock_threshold") as string;
            const thresholdNum = parseInt(threshold);

            if (isNaN(thresholdNum) || thresholdNum < 1 || thresholdNum > 100) {
                error = "El umbral debe ser un n煤mero entre 1 y 100";
            } else {
                // Actualizar umbral de stock
                const { error: upsertError } = await supabase
                    .from("app_settings")
                    .upsert(
                        {
                            key: "low_stock_threshold",
                            value: thresholdNum.toString(),
                            updated_at: new Date().toISOString(),
                        },
                        { onConflict: "key" },
                    );

                if (upsertError) {
                    error = `Error al guardar: ${upsertError.message}`;
                } else {
                    success = true;
                }
            }
        } else if (action === "popup_toggle") {
            const popupOn = formData.get("popup_enabled") === "on";
            const { error: upsertError } = await supabase
                .from("app_settings")
                .upsert(
                    {
                        key: "popup_enabled",
                        value: popupOn.toString(),
                        updated_at: new Date().toISOString(),
                    },
                    { onConflict: "key" },
                );

            if (upsertError) {
                error = `Error al guardar: ${upsertError.message}`;
            } else {
                success = true;
            }
        } else if (action === "popup_content") {
            const title = formData.get("popup_title") as string;
            const message = formData.get("popup_message") as string;
            const promoCode = formData.get("popup_promo_code") as string;
            const discount = formData.get("popup_discount") as string;

            // Guardar todas las configuraciones del popup
            const settings = [
                { key: "popup_title", value: title },
                { key: "popup_message", value: message },
                { key: "popup_promo_code", value: promoCode.toUpperCase() },
                { key: "popup_discount", value: discount },
            ];

            for (const setting of settings) {
                const { error: upsertError } = await supabase
                    .from("app_settings")
                    .upsert(
                        {
                            key: setting.key,
                            value: setting.value,
                            updated_at: new Date().toISOString(),
                        },
                        { onConflict: "key" },
                    );

                if (upsertError) {
                    error = `Error al guardar: ${upsertError.message}`;
                    break;
                }
            }

            if (!error) {
                success = true;
            }
        }
    } catch (e) {
        error = "Ha ocurrido un error inesperado.";
        console.error(e);
    }
}

const isFlashOffersEnabled = flashOffersEnabled === "true";
const isPopupEnabled = popupEnabled === "true";
