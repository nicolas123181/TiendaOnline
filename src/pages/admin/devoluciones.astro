---
import AdminLayout from "../../layouts/AdminLayout.astro";
import { supabase } from "../../lib/supabase";
import { formatPrice } from "../../lib/utils";

export const prerender = false;

// Obtener todas las devoluciones
const { data: returnsRaw, error: returnsError } = await supabase
    .from("returns")
    .select("*")
    .order("created_at", { ascending: false });

if (returnsError) {
    console.error("Error fetching returns:", returnsError);
}

const returns = returnsRaw || [];

// Separar por estado
const pendingReturns = returns.filter((r) => r.status === "pending");
const inTransitReturns = returns.filter((r) => r.status === "in_transit");
const receivedReturns = returns.filter((r) => r.status === "received");
const completedReturns = returns.filter(
    (r) => r.status === "refunded" || r.status === "rejected",
);

const statusLabels: Record<string, string> = {
    pending: "Pendiente de env√≠o",
    in_transit: "En tr√°nsito",
    received: "Recibido",
    refunded: "Reembolsado",
    rejected: "Rechazado",
};

const statusColors: Record<string, string> = {
    pending: "bg-yellow-100 text-yellow-800",
    in_transit: "bg-blue-100 text-blue-800",
    received: "bg-purple-100 text-purple-800",
    refunded: "bg-green-100 text-green-800",
    rejected: "bg-red-100 text-red-800",
};

const reasonLabels: Record<string, string> = {
    wrong_size: "Talla incorrecta",
    not_as_expected: "No es lo que esperaba",
    defective: "Producto defectuoso",
    changed_mind: "Cambio de opini√≥n",
    other: "Otro motivo",
};
---

<AdminLayout title="Gesti√≥n de Devoluciones">
    <div class="mb-8">
        <div class="flex items-center justify-between mb-4">
            <div>
                <h1 class="text-2xl font-bold text-gray-900">
                    Gesti√≥n de Devoluciones
                </h1>
                <p class="text-gray-600 mt-1">
                    Control de devoluciones y reembolsos
                </p>
            </div>
            <a
                href="/admin"
                class="text-sm text-gray-600 hover:text-gray-900 flex items-center gap-2"
            >
                <svg
                    class="w-4 h-4"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Volver al Dashboard
            </a>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
            <div
                class="bg-white rounded-xl p-4 shadow-sm border border-yellow-100"
            >
                <p class="text-3xl font-bold text-yellow-600">
                    {pendingReturns.length + inTransitReturns.length}
                </p>
                <p class="text-sm text-gray-600">üì¶ Pendientes</p>
            </div>
            <div
                class="bg-white rounded-xl p-4 shadow-sm border border-purple-100"
            >
                <p class="text-3xl font-bold text-purple-600">
                    {receivedReturns.length}
                </p>
                <p class="text-sm text-gray-600">üì¨ Recibidos</p>
            </div>
            <div
                class="bg-white rounded-xl p-4 shadow-sm border border-green-100"
            >
                <p class="text-3xl font-bold text-green-600">
                    {
                        completedReturns.filter((r) => r.status === "refunded")
                            .length
                    }
                </p>
                <p class="text-sm text-gray-600">‚úÖ Reembolsados</p>
            </div>
            <div
                class="bg-white rounded-xl p-4 shadow-sm border border-gray-100"
            >
                <p class="text-3xl font-bold text-gray-600">{returns.length}</p>
                <p class="text-sm text-gray-600">Total</p>
            </div>
        </div>
    </div>

    <!-- Mensajes -->
    <div
        id="success-message"
        class="hidden mb-6 p-4 bg-green-50 border border-green-200 rounded-xl"
    >
        <p class="text-green-700 text-sm flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd"></path>
            </svg>
            <span id="success-text">Operaci√≥n completada</span>
        </p>
    </div>

    <div
        id="error-message"
        class="hidden mb-6 p-4 bg-red-50 border border-red-200 rounded-xl"
    >
        <p class="text-red-700 text-sm flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                    clip-rule="evenodd"></path>
            </svg>
            <span id="error-text">Error</span>
        </p>
    </div>

    <!-- PENDIENTES Y EN TR√ÅNSITO -->
    <section class="mb-10">
        <h2
            class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2"
        >
            <span
                class="w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center"
                >üì¶</span
            >
            Pendientes de Recibir
            <span class="text-sm font-normal text-gray-500"
                >({pendingReturns.length + inTransitReturns.length})</span
            >
        </h2>

        {
            pendingReturns.length + inTransitReturns.length === 0 ? (
                <div class="bg-gray-50 rounded-xl p-8 text-center text-gray-500">
                    No hay devoluciones pendientes
                </div>
            ) : (
                <div class="space-y-4">
                    {[...pendingReturns, ...inTransitReturns].map((ret) => (
                        <div
                            class="bg-white rounded-xl shadow-sm border border-yellow-100 p-6"
                            data-return-id={ret.id}
                        >
                            <div class="flex items-start justify-between gap-4">
                                <div class="flex-1">
                                    <div class="flex items-center gap-3 mb-2">
                                        <span class="font-mono font-bold text-lg text-blue-900">
                                            {ret.return_number}
                                        </span>
                                        <span
                                            class={`px-3 py-1 text-xs font-semibold rounded-full ${statusColors[ret.status]}`}
                                        >
                                            {statusLabels[ret.status]}
                                        </span>
                                        <span class="text-sm text-gray-500">
                                            Pedido #
                                            {ret.order_id
                                                .toString()
                                                .padStart(5, "0")}
                                        </span>
                                    </div>
                                    <p class="text-gray-900 font-medium">
                                        {ret.customer_name}
                                    </p>
                                    <p class="text-sm text-gray-600">
                                        {ret.customer_email}
                                    </p>

                                    <div class="mt-3 p-3 bg-yellow-50 rounded-lg">
                                        <p class="text-sm font-medium text-yellow-800">
                                            Motivo:{" "}
                                            {reasonLabels[ret.reason] ||
                                                ret.reason}
                                        </p>
                                        {ret.reason_details && (
                                            <p class="text-sm text-yellow-700 mt-1">
                                                {ret.reason_details}
                                            </p>
                                        )}
                                    </div>

                                    <div class="mt-3">
                                        <p class="text-sm font-medium text-gray-700 mb-1">
                                            Productos:
                                        </p>
                                        <div class="flex flex-wrap gap-2">
                                            {(ret.items as any[]).map(
                                                (item: any) => (
                                                    <span class="text-xs bg-gray-100 px-2 py-1 rounded">
                                                        {item.product_name} (
                                                        {item.size || "√önica"})
                                                        √ó {item.quantity}
                                                    </span>
                                                ),
                                            )}
                                        </div>
                                    </div>

                                    <p class="mt-3 text-sm text-gray-500">
                                        Solicitado:{" "}
                                        {new Date(
                                            ret.created_at,
                                        ).toLocaleDateString("es-ES", {
                                            day: "numeric",
                                            month: "short",
                                            year: "numeric",
                                            hour: "2-digit",
                                            minute: "2-digit",
                                        })}
                                    </p>
                                </div>

                                <div class="text-right">
                                    <p class="text-xl font-bold text-gray-900">
                                        {formatPrice(ret.refund_amount)}
                                    </p>
                                    <p class="text-sm text-gray-500">
                                        a reembolsar
                                    </p>

                                    <button
                                        type="button"
                                        class="mt-4 w-full px-4 py-2 bg-purple-600 text-white font-medium rounded-lg hover:bg-purple-700 transition-colors return-action-btn"
                                        data-return={ret.id}
                                        data-action="received"
                                    >
                                        üì¨ Marcar Recibido
                                    </button>
                                </div>
                            </div>
                        </div>
                    ))}
                </div>
            )
        }
    </section>

    <!-- RECIBIDOS (pendientes de reembolso) -->
    <section class="mb-10">
        <h2
            class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2"
        >
            <span
                class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center"
                >üì¨</span
            >
            Recibidos - Pendientes de Reembolso
            <span class="text-sm font-normal text-gray-500"
                >({receivedReturns.length})</span
            >
        </h2>

        {
            receivedReturns.length === 0 ? (
                <div class="bg-gray-50 rounded-xl p-8 text-center text-gray-500">
                    No hay devoluciones pendientes de reembolso
                </div>
            ) : (
                <div class="space-y-4">
                    {receivedReturns.map((ret) => (
                        <div
                            class="bg-white rounded-xl shadow-sm border border-purple-200 p-6"
                            data-return-id={ret.id}
                        >
                            <div class="flex items-start justify-between gap-4">
                                <div class="flex-1">
                                    <div class="flex items-center gap-3 mb-2">
                                        <span class="font-mono font-bold text-lg text-blue-900">
                                            {ret.return_number}
                                        </span>
                                        <span
                                            class={`px-3 py-1 text-xs font-semibold rounded-full ${statusColors[ret.status]}`}
                                        >
                                            {statusLabels[ret.status]}
                                        </span>
                                    </div>
                                    <p class="text-gray-900 font-medium">
                                        {ret.customer_name}
                                    </p>
                                    <p class="text-sm text-gray-600">
                                        {ret.customer_email}
                                    </p>

                                    <div class="mt-3 flex flex-wrap gap-2">
                                        {(ret.items as any[]).map(
                                            (item: any) => (
                                                <span class="text-xs bg-gray-100 px-2 py-1 rounded">
                                                    {item.product_name} (
                                                    {item.size || "√önica"}) √ó{" "}
                                                    {item.quantity}
                                                </span>
                                            ),
                                        )}
                                    </div>

                                    <p class="mt-3 text-sm text-gray-500">
                                        Recibido:{" "}
                                        {ret.received_at
                                            ? new Date(
                                                  ret.received_at,
                                              ).toLocaleDateString("es-ES", {
                                                  day: "numeric",
                                                  month: "short",
                                              })
                                            : "-"}
                                    </p>
                                </div>

                                <div class="text-right">
                                    <p class="text-xl font-bold text-gray-900">
                                        {formatPrice(ret.refund_amount)}
                                    </p>
                                    <p class="text-sm text-gray-500">
                                        a reembolsar
                                    </p>

                                    <div class="mt-4 space-y-2">
                                        <button
                                            type="button"
                                            class="w-full px-4 py-2 bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 transition-colors return-action-btn"
                                            data-return={ret.id}
                                            data-action="refunded"
                                            data-amount={ret.refund_amount}
                                        >
                                            ‚úÖ Procesar Reembolso
                                        </button>
                                        <button
                                            type="button"
                                            class="w-full px-4 py-2 bg-red-100 text-red-700 font-medium rounded-lg hover:bg-red-200 transition-colors reject-btn"
                                            data-return={ret.id}
                                        >
                                            ‚ùå Rechazar
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    ))}
                </div>
            )
        }
    </section>

    <!-- COMPLETADOS -->
    <section class="mt-12 pt-12 border-t-4 border-green-200">
        <div class="flex items-center gap-3 mb-6">
            <div
                class="w-12 h-12 rounded-full bg-green-100 flex items-center justify-center"
            >
                <svg
                    class="w-6 h-6 text-green-600"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                >
                    <path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                        clip-rule="evenodd"></path>
                </svg>
            </div>
            <div>
                <h2 class="text-xl font-bold text-gray-900">
                    ‚úÖ Devoluciones Completadas
                </h2>
                <p class="text-sm text-gray-600">
                    {completedReturns.length} devoluciones procesadas
                </p>
            </div>
        </div>

        {
            completedReturns.length === 0 ? (
                <div class="bg-gray-50 rounded-xl p-8 text-center text-gray-500">
                    No hay devoluciones completadas
                </div>
            ) : (
                <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                                        N¬∫ Devoluci√≥n
                                    </th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                                        Cliente
                                    </th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                                        Estado
                                    </th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                                        Importe
                                    </th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                                        Fecha
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-100">
                                {completedReturns.map((ret) => (
                                    <tr class="hover:bg-gray-50">
                                        <td class="px-4 py-4">
                                            <span class="font-mono font-bold text-blue-900">
                                                {ret.return_number}
                                            </span>
                                        </td>
                                        <td class="px-4 py-4">
                                            <p class="font-medium text-gray-900">
                                                {ret.customer_name}
                                            </p>
                                            <p class="text-sm text-gray-500">
                                                {ret.customer_email}
                                            </p>
                                        </td>
                                        <td class="px-4 py-4">
                                            <span
                                                class={`px-2 py-1 text-xs font-semibold rounded-full ${statusColors[ret.status]}`}
                                            >
                                                {statusLabels[ret.status]}
                                            </span>
                                        </td>
                                        <td class="px-4 py-4 font-semibold">
                                            {formatPrice(ret.refund_amount)}
                                        </td>
                                        <td class="px-4 py-4 text-sm text-gray-500">
                                            {new Date(
                                                ret.refunded_at ||
                                                    ret.updated_at,
                                            ).toLocaleDateString("es-ES", {
                                                day: "2-digit",
                                                month: "short",
                                                year: "numeric",
                                            })}
                                        </td>
                                    </tr>
                                ))}
                            </tbody>
                        </table>
                    </div>
                </div>
            )
        }
    </section>

    <!-- Modal de rechazo -->
    <div
        id="reject-modal"
        class="fixed inset-0 bg-black/50 flex items-center justify-center z-50 hidden"
    >
        <div class="bg-white rounded-2xl p-8 max-w-md w-full mx-4 shadow-2xl">
            <h3 class="text-xl font-bold text-gray-900 mb-4">
                ‚ùå Rechazar Devoluci√≥n
            </h3>
            <form id="reject-form">
                <input type="hidden" id="reject-return-id" />
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 mb-2"
                        >Motivo del rechazo</label
                    >
                    <textarea
                        id="reject-reason"
                        rows="3"
                        required
                        placeholder="Explica al cliente por qu√© no procede la devoluci√≥n..."
                        class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-red-500"
                    ></textarea>
                </div>
                <div class="flex gap-3">
                    <button
                        type="button"
                        id="cancel-reject"
                        class="flex-1 px-4 py-3 border border-gray-300 rounded-xl hover:bg-gray-50"
                    >
                        Cancelar
                    </button>
                    <button
                        type="submit"
                        class="flex-1 px-4 py-3 bg-red-600 text-white font-medium rounded-xl hover:bg-red-700"
                    >
                        Confirmar Rechazo
                    </button>
                </div>
            </form>
        </div>
    </div>
</AdminLayout>

<script>
    // Acciones directas
    document.querySelectorAll(".return-action-btn").forEach((btn) => {
        btn.addEventListener("click", async (e) => {
            const button = e.target as HTMLButtonElement;
            const returnId = button.dataset.return;
            const action = button.dataset.action;
            const amount = button.dataset.amount;

            if (!returnId || !action) return;

            const actionLabels: Record<string, string> = {
                received: "marcar como recibido",
                refunded: "procesar el reembolso",
            };

            if (!confirm(`¬øConfirmar ${actionLabels[action]}?`)) return;

            button.disabled = true;
            button.textContent = "Procesando...";

            try {
                const response = await fetch("/api/admin/update-return", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({
                        returnId: parseInt(returnId),
                        status: action,
                        refundAmount: amount ? parseInt(amount) : undefined,
                    }),
                });

                const result = await response.json();

                if (result.success) {
                    const successMsg =
                        document.getElementById("success-message");
                    const successText = document.getElementById("success-text");
                    if (successMsg && successText) {
                        successText.textContent = result.message;
                        successMsg.classList.remove("hidden");
                    }
                    setTimeout(() => location.reload(), 1500);
                } else {
                    throw new Error(result.error);
                }
            } catch (error) {
                const errorMsg = document.getElementById("error-message");
                const errorText = document.getElementById("error-text");
                if (errorMsg && errorText) {
                    errorText.textContent = (error as Error).message;
                    errorMsg.classList.remove("hidden");
                }
                button.disabled = false;
            }
        });
    });

    // Modal de rechazo
    const rejectModal = document.getElementById("reject-modal");
    const rejectForm = document.getElementById("reject-form");
    const cancelReject = document.getElementById("cancel-reject");

    document.querySelectorAll(".reject-btn").forEach((btn) => {
        btn.addEventListener("click", (e) => {
            const button = e.target as HTMLButtonElement;
            (
                document.getElementById("reject-return-id") as HTMLInputElement
            ).value = button.dataset.return || "";
            rejectModal?.classList.remove("hidden");
        });
    });

    cancelReject?.addEventListener("click", () =>
        rejectModal?.classList.add("hidden"),
    );
    rejectModal?.addEventListener("click", (e) => {
        if (e.target === rejectModal) rejectModal.classList.add("hidden");
    });

    rejectForm?.addEventListener("submit", async (e) => {
        e.preventDefault();
        const returnId = (
            document.getElementById("reject-return-id") as HTMLInputElement
        ).value;
        const reason = (
            document.getElementById("reject-reason") as HTMLTextAreaElement
        ).value;

        try {
            const response = await fetch("/api/admin/update-return", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                    returnId: parseInt(returnId),
                    status: "rejected",
                    adminNotes: reason,
                }),
            });

            const result = await response.json();
            if (result.success) {
                location.reload();
            } else {
                alert(result.error);
            }
        } catch (error) {
            alert((error as Error).message);
        }
    });
</script>
