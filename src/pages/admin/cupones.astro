import AdminLayout from "../../layouts/AdminLayout.astro";
import { supabase, isSupabaseConfigured } from "../../lib/supabase";

// Verificar si Supabase est√° configurado
if (!isSupabaseConfigured) {
    return Astro.redirect("/admin/login?error=config");
}

// Procesar formularios
let message = "";
let messageType: "success" | "error" = "success";

if (Astro.request.method === "POST") {
    const formData = await Astro.request.formData();
    const action = formData.get("action") as string;

    if (action === "create") {
        const code = (formData.get("code") as string)
            .toUpperCase()
            .replace(/\s/g, "");
        const discountType = formData.get("discount_type") as string;
        const discountValue = parseInt(
            formData.get("discount_value") as string,
        );
        const minPurchase =
            parseInt(formData.get("min_purchase") as string) || 0;
        const maxUses = parseInt(formData.get("max_uses") as string) || null;
        const maxUsesPerUser =
            parseInt(formData.get("max_uses_per_user") as string) || null;
        const startDate = (formData.get("start_date") as string) || null;
        const endDate = (formData.get("end_date") as string) || null;

        // Validar c√≥digo √∫nico
        const { data: existing } = await supabase
            .from("coupons")
            .select("id")
            .eq("code", code)
            .single();

        if (existing) {
            message = "Ya existe un cup√≥n con ese c√≥digo";
            messageType = "error";
        } else {
            const { error } = await supabase.from("coupons").insert({
                code,
                discount_type: discountType,
                discount_value:
                    discountType === "percentage"
                        ? discountValue
                        : discountValue * 100, // Convertir a c√©ntimos si es fijo
                min_purchase: minPurchase * 100, // Convertir a c√©ntimos
                max_uses: maxUses,
                max_uses_per_user: maxUsesPerUser,
                start_date: startDate || new Date().toISOString(), // Usar fecha actual si no se proporciona
                end_date: endDate || null,
                is_active: true,
            });

            if (error) {
                message = `Error al crear cup√≥n: ${error.message}`;
                messageType = "error";
            } else {
                message = `Cup√≥n "${code}" creado correctamente`;
                messageType = "success";
            }
        }
    } else if (action === "toggle") {
        const id = parseInt(formData.get("id") as string);
        const isActive = formData.get("is_active") === "true";

        const { error } = await supabase
            .from("coupons")
            .update({ is_active: !isActive })
            .eq("id", id);

        if (error) {
            message = `Error: ${error.message}`;
            messageType = "error";
        } else {
            message = `Cup√≥n ${!isActive ? "activado" : "desactivado"}`;
            messageType = "success";
        }
    } else if (action === "delete") {
        const id = parseInt(formData.get("id") as string);

        const { error } = await supabase.from("coupons").delete().eq("id", id);

        if (error) {
            message = `Error al eliminar: ${error.message}`;
            messageType = "error";
        } else {
            message = "Cup√≥n eliminado correctamente";
            messageType = "success";
        }
    }
}

// Obtener todos los cupones
const { data: coupons } = await supabase
    .from("coupons")
    .select("*")
    .order("created_at", { ascending: false });

// Obtener uso de cupones
const { data: usageData } = await supabase
    .from("coupon_usage")
    .select("coupon_id");

// Contar usos por cup√≥n
const usageCount = new Map<number, number>();
usageData?.forEach((u) => {
    usageCount.set(u.coupon_id, (usageCount.get(u.coupon_id) || 0) + 1);
});

// Funciones helper
function formatDiscount(type: string, value: number): string {
    if (type === "percentage") {
        return `${value}%`;
    } else {
        return `${(value / 100).toFixed(2)}‚Ç¨`;
    }
}

function formatDate(dateStr: string | null): string {
    if (!dateStr) return "‚Äî";
    return new Date(dateStr).toLocaleDateString("es-ES", {
        day: "2-digit",
        month: "short",
        year: "numeric",
    });
}

function getCouponStatus(coupon: any): { text: string; class: string } {
    const now = new Date();

    if (!coupon.is_active) {
        return { text: "Desactivado", class: "status-inactive" };
    }

    if (coupon.end_date && new Date(coupon.end_date) < now) {
        return { text: "Expirado", class: "status-expired" };
    }

    if (coupon.start_date && new Date(coupon.start_date) > now) {
        return { text: "Programado", class: "status-scheduled" };
    }

    if (
        coupon.max_uses &&
        (usageCount.get(coupon.id) || 0) >= coupon.max_uses
    ) {
        return { text: "Agotado", class: "status-expired" };
    }

    return { text: "Activo", class: "status-active" };
}
