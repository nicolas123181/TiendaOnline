import AdminLayout from "../../layouts/AdminLayout.astro";
import { supabase } from "../../lib/supabase";
import { formatPrice } from "../../lib/utils";

export const prerender = false;

let success = "";
let error = "";

// Obtener pedidos pagados
const { data: ordersRaw, error: ordersError } = await supabase
    .from("orders")
    .select("*, order_items(*)")
    .in("status", ["paid", "ready_for_pickup", "shipped"])
    .order("created_at", { ascending: true });

if (ordersError) {
    console.error("Error fetching orders:", ordersError);
}

// Obtener m√©todos de env√≠o
const { data: shippingMethods } = await supabase
    .from("shipping_methods")
    .select("*");

// Crear mapa de m√©todos de env√≠o
const shippingMap = new Map();
(shippingMethods || []).forEach((m) => shippingMap.set(m.id, m));

// A√±adir info de env√≠o a cada pedido
const orders = (ordersRaw || []).map((order) => ({
    ...order,
    shipping_method: shippingMap.get(order.shipping_method_id) || null,
}));

// Ordenar por prioridad de env√≠o (m√°s caro primero = m√°s urgente)
const sortedOrders = orders.sort((a, b) => {
    // Primero los que tienen env√≠o m√°s caro (m√°s urgente)
    const aCost = a.shipping_method?.cost || a.shipping_cost || 0;
    const bCost = b.shipping_method?.cost || b.shipping_cost || 0;
    if (bCost !== aCost) return bCost - aCost;
    // Luego por fecha (m√°s antiguo primero)
    return new Date(a.created_at).getTime() - new Date(b.created_at).getTime();
});

// Separar por tipo (recogida en tienda vs env√≠o)
const pickupOrders = sortedOrders.filter(
    (o) =>
        o.shipping_method?.name?.toLowerCase().includes("recoger") ||
        o.shipping_method?.name?.toLowerCase().includes("tienda") ||
        o.shipping_method?.min_days === 0 ||
        o.shipping_cost === 0,
);
const shippingOrders = sortedOrders.filter((o) => !pickupOrders.includes(o));

// Obtener TODOS los pedidos para la secci√≥n de historial
const { data: allOrdersRaw } = await supabase
    .from("orders")
    .select("*, order_items(*)")
    .order("created_at", { ascending: false })
    .limit(100);

const allOrders = (allOrdersRaw || []).map((order) => ({
    ...order,
    shipping_method: shippingMap.get(order.shipping_method_id) || null,
}));

const statusLabels: Record<string, string> = {
    pending: "Pendiente de Pago",
    paid: "Pagado - Preparar",
    ready_for_pickup: "Listo para recoger",
    shipped: "Enviado",
    delivered: "Entregado",
    cancelled: "Cancelado",
};

const statusColors: Record<string, string> = {
    pending: "bg-yellow-100 text-yellow-800",
    paid: "bg-blue-100 text-blue-800",
    ready_for_pickup: "bg-orange-100 text-orange-800",
    shipped: "bg-purple-100 text-purple-800",
    delivered: "bg-green-100 text-green-800",
    cancelled: "bg-red-100 text-red-800",
};
