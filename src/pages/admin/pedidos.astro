            </div>
        </div>

        <!-- B√∫squeda y filtros -->
        <div
            class="bg-white rounded-xl shadow-sm border border-gray-100 p-4 mb-6"
        >
            <div class="flex flex-col md:flex-row gap-4">
                <div class="flex-1">
                    <label class="block text-sm font-medium text-gray-700 mb-1"
                        >Buscar por ID</label
                    >
                    <div class="relative">
                        <input
                            type="text"
                            id="search-id"
                            placeholder="Ej: 00001"
                            class="w-full px-4 py-2 pl-10 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                        />
                        <svg
                            class="w-5 h-5 text-gray-400 absolute left-3 top-2.5"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                            ></path>
                        </svg>
                    </div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1"
                        >Filtrar por estado</label
                    >
                    <select
                        id="filter-status"
                        class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                    >
                        <option value="">Todos los completados</option>
                        <option value="delivered">Entregado</option>
                        <option value="cancelled">Cancelado</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Tabla de pedidos -->
        <div
            class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden"
        >
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-50">
                        <tr>
                            <th
                                class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase"
                                >ID</th
                            >
                            <th
                                class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase"
                                >Cliente</th
                            >
                            <th
                                class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase"
                                >Estado</th
                            >
                            <th
                                class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase"
                                >Total</th
                            >
                            <th
                                class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase"
                                >Fecha</th
                            >
                            <th
                                class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase"
                                >Productos</th
                            >
                        </tr>
                    </thead>
                    <tbody
                        id="orders-table-body"
                        class="divide-y divide-gray-100"
                    >
                        {
                            allOrders.map((order) => (
                                <tr
                                    class="hover:bg-gray-50 order-row"
                                    data-id={order.id}
                                    data-status={order.status}
                                >
                                    <td class="px-4 py-4">
                                        <span class="font-mono font-bold text-blue-900">
                                            #
                                            {order.id
                                                .toString()
                                                .padStart(5, "0")}
                                        </span>
                                    </td>
                                    <td class="px-4 py-4">
                                        <p class="font-medium text-gray-900">
                                            {order.customer_name}
                                        </p>
                                        <p class="text-sm text-gray-500">
                                            {order.customer_email}
                                        </p>
                                    </td>
                                    <td class="px-4 py-4">
                                        <span
                                            class={`px-2 py-1 text-xs font-semibold rounded-full ${statusColors[order.status] || "bg-gray-100 text-gray-800"}`}
                                        >
                                            {statusLabels[order.status] ||
                                                order.status}
                                        </span>
                                    </td>
                                    <td class="px-4 py-4 font-semibold">
                                        {formatPrice(order.total)}
                                    </td>
                                    <td class="px-4 py-4 text-sm text-gray-500">
                                        {new Date(
                                            order.created_at,
                                        ).toLocaleDateString("es-ES", {
                                            day: "2-digit",
                                            month: "short",
                                            year: "numeric",
                                        })}
                                    </td>
                                    <td class="px-4 py-4 text-sm text-gray-600">
                                        {order.order_items?.length || 0} item(s)
                                    </td>
                                </tr>
                            ))
                        }
                    </tbody>
                </table>
            </div>

            {
                allOrders.length === 0 && (
                    <div class="p-8 text-center text-gray-500">
                        No hay pedidos completados
                    </div>
                )
            }
        </div>
    </section>

    <!-- MODAL DE ENV√çO -->
    <div
        id="shipping-modal"
        class="fixed inset-0 bg-black/50 flex items-center justify-center z-50 hidden"
    >
        <div class="bg-white rounded-2xl p-8 max-w-md w-full mx-4 shadow-2xl">
            <h3
                class="text-xl font-bold text-gray-900 mb-6 flex items-center gap-2"
            >
                üöö Informaci√≥n de Env√≠o
            </h3>

            <form id="shipping-form" class="space-y-5">
                <input type="hidden" id="modal-order-id" />
                <input type="hidden" id="modal-customer-email" />
                <input type="hidden" id="modal-customer-name" />

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        Empresa de Transporte *
                    </label>
                    <select
                        id="carrier-select"
                        required
                        class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                    >
                        <option value="">Selecciona un distribuidor</option>
                        {
                            (shippingCarriers || []).map((carrier: any) => (
                                <option
                                    value={carrier.id}
                                    data-tracking-url={
                                        carrier.tracking_url_template
                                    }
                                >
                                    {carrier.name}
                                </option>
                            ))
                        }
                    </select>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        N√∫mero de Seguimiento *
                    </label>
                    <input
                        type="text"
                        id="tracking-number"
                        required
                        placeholder="Ej: 1Z999AA10123456784"
                        class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                    />
                    <p class="text-xs text-gray-500 mt-1">
                        El cliente recibir√° un email con este n√∫mero
                    </p>
                </div>

                <div class="flex gap-3 pt-4">
                    <button
                        type="button"
                        id="cancel-modal"
                        class="flex-1 px-4 py-3 border border-gray-300 text-gray-700 font-medium rounded-xl hover:bg-gray-50 transition-colors"
                    >
                        Cancelar
                    </button>
                    <button
                        type="submit"
                        class="flex-1 px-4 py-3 bg-blue-600 text-white font-medium rounded-xl hover:bg-blue-700 transition-colors"
                    >
                        Confirmar Env√≠o
                    </button>
                </div>
            </form>
        </div>
    </div>
</AdminLayout>

<script>
    // Modal de env√≠o
    const shippingModal = document.getElementById("shipping-modal");
    const shippingForm = document.getElementById("shipping-form");
    const cancelModalBtn = document.getElementById("cancel-modal");

    // Botones de env√≠o (abren modal)
    document.querySelectorAll(".shipping-action-btn").forEach((btn) => {
        btn.addEventListener("click", (e) => {
            const button = e.target as HTMLButtonElement;
            const orderId = button.dataset.order;
            const email = button.dataset.email;
            const name = button.dataset.name;

            // Rellenar datos del modal
            (
                document.getElementById("modal-order-id") as HTMLInputElement
            ).value = orderId || "";
            (
                document.getElementById(
                    "modal-customer-email",
                ) as HTMLInputElement
            ).value = email || "";
            (
                document.getElementById(
                    "modal-customer-name",
                ) as HTMLInputElement
            ).value = name || "";

            // Mostrar modal
            shippingModal?.classList.remove("hidden");
        });
    });

    // Cerrar modal
    cancelModalBtn?.addEventListener("click", () => {
        shippingModal?.classList.add("hidden");
    });

    shippingModal?.addEventListener("click", (e) => {
        if (e.target === shippingModal) {
            shippingModal.classList.add("hidden");
        }
    });

    // Enviar formulario de env√≠o
    shippingForm?.addEventListener("submit", async (e) => {
        e.preventDefault();

        const orderId = (
            document.getElementById("modal-order-id") as HTMLInputElement
        ).value;
        const email = (
            document.getElementById("modal-customer-email") as HTMLInputElement
        ).value;
        const name = (
            document.getElementById("modal-customer-name") as HTMLInputElement
        ).value;
        const carrierId = (
            document.getElementById("carrier-select") as HTMLSelectElement
        ).value;
        const carrierName =
            (document.getElementById("carrier-select") as HTMLSelectElement)
                .selectedOptions[0]?.text || "";
        const trackingNumber = (
            document.getElementById("tracking-number") as HTMLInputElement
        ).value;
        const trackingUrlTemplate =
            (document.getElementById("carrier-select") as HTMLSelectElement)
                .selectedOptions[0]?.dataset.trackingUrl || "";

        const submitBtn = shippingForm.querySelector(
            'button[type="submit"]',
        ) as HTMLButtonElement;
        submitBtn.disabled = true;
        submitBtn.textContent = "Procesando...";

        try {
            const response = await fetch("/api/admin/update-order-status", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                    orderId: parseInt(orderId),
                    status: "shipped",
                    customerEmail: email,
                    customerName: name,
                    carrierId: parseInt(carrierId),
                    carrierName,
                    trackingNumber,
                    trackingUrlTemplate,
                }),
            });

            const result = await response.json();

            if (result.success) {
                shippingModal?.classList.add("hidden");

                const successMsg = document.getElementById("success-message");
                const successText = document.getElementById("success-text");
                if (successMsg && successText) {
                    successText.textContent =
                        "Pedido enviado. Email con tracking enviado al cliente.";
                    successMsg.classList.remove("hidden");
                }

                // Ocultar pedido de la lista
                const orderCard = document.querySelector(
                    `[data-order-id="${orderId}"]`,
                );
                if (orderCard) {
                    orderCard.classList.add(
                        "opacity-50",
                        "pointer-events-none",
                    );
                    setTimeout(() => location.reload(), 1500);
                }
            } else {
                throw new Error(result.error || "Error al actualizar");
            }
        } catch (error) {
            const errorMsg = document.getElementById("error-message");
            const errorText = document.getElementById("error-text");
            if (errorMsg && errorText) {
                errorText.textContent = (error as Error).message;
                errorMsg.classList.remove("hidden");
            }
        } finally {
            submitBtn.disabled = false;
            submitBtn.textContent = "Confirmar Env√≠o";
        }
    });

    // Botones de acci√≥n directa (recogida en tienda)
    document.querySelectorAll(".action-btn").forEach((btn) => {
        btn.addEventListener("click", async (e) => {
            const button = e.target as HTMLButtonElement;
            const orderId = button.dataset.order;
            const action = button.dataset.action;
            const email = button.dataset.email;
            const name = button.dataset.name;

            if (!orderId || !action) return;

            const actionLabels: Record<string, string> = {
                ready_for_pickup: "marcar como listo para recoger",
                delivered: "marcar como entregado",
            };

            if (
                !confirm(
                    `¬øConfirmar ${actionLabels[action] || action}?\n\nSe enviar√° un email a ${email}`,
                )
            ) {
                return;
            }

            button.disabled = true;
            button.textContent = "Procesando...";

            try {
                const response = await fetch("/api/admin/update-order-status", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({
                        orderId: parseInt(orderId),
                        status: action,
                        customerEmail: email,
                        customerName: name,
                    }),
                });

                const result = await response.json();

                if (result.success) {
                    const successMsg =
                        document.getElementById("success-message");
                    const successText = document.getElementById("success-text");
                    if (successMsg && successText) {
                        successText.textContent =
                            result.message ||
                            "Pedido actualizado y email enviado";
                        successMsg.classList.remove("hidden");
                    }

                    const orderCard = button.closest("[data-order-id]");
                    if (orderCard) {
                        orderCard.classList.add(
                            "opacity-50",
                            "pointer-events-none",
                        );
                        setTimeout(() => location.reload(), 1500);
                    }
                } else {
                    throw new Error(result.error || "Error al actualizar");
                }
            } catch (error) {
                const errorMsg = document.getElementById("error-message");
                const errorText = document.getElementById("error-text");
                if (errorMsg && errorText) {
                    errorText.textContent = (error as Error).message;
                    errorMsg.classList.remove("hidden");
                }
                button.disabled = false;
                button.textContent =
                    button.textContent?.replace("Procesando...", "") ||
                    "Reintentar";
            }
        });
    });

    // Filtrado de la tabla
    const searchInput = document.getElementById(
        "search-id",
    ) as HTMLInputElement;
    const statusFilter = document.getElementById(
        "filter-status",
    ) as HTMLSelectElement;
    const orderRows = document.querySelectorAll(".order-row");

    function filterOrders() {
        const searchValue =
            searchInput?.value.toLowerCase().replace("#", "") || "";
        const statusValue = statusFilter?.value || "";

        orderRows.forEach((row) => {
            const rowElement = row as HTMLElement;
            const orderId = rowElement.dataset.id || "";
            const orderStatus = rowElement.dataset.status || "";

            const matchesId =
                searchValue === "" ||
                orderId.includes(searchValue) ||
                orderId.padStart(5, "0").includes(searchValue);
            const matchesStatus =
                statusValue === "" || orderStatus === statusValue;

            rowElement.style.display = matchesId && matchesStatus ? "" : "none";
        });
    }

    searchInput?.addEventListener("input", filterOrders);
    statusFilter?.addEventListener("change", filterOrders);
</script>
