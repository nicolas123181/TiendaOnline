import AdminLayout from "../../layouts/AdminLayout.astro";
import { supabase } from "../../lib/supabase";
import { formatPrice } from "../../lib/utils";

export const prerender = false;

// Procesar query params para filtrado
const url = new URL(Astro.request.url);
const searchId = url.searchParams.get("id") || "";
const filterStatus = url.searchParams.get("status") || "";

// Obtener pedidos pendientes de acci√≥n (no entregados ni cancelados)
const { data: ordersRaw, error: ordersError } = await supabase
    .from("orders")
    .select("*, order_items(*)")
    .in("status", ["paid", "ready_for_pickup", "shipped"])
    .order("created_at", { ascending: true });

if (ordersError) {
    console.error("Error fetching orders:", ordersError);
}

// Obtener m√©todos de env√≠o
const { data: shippingMethods } = await supabase
    .from("shipping_methods")
    .select("*");

// Obtener transportistas
const { data: shippingCarriers } = await supabase
    .from("shipping_carriers")
    .select("*")
    .eq("is_active", true)
    .order("display_order");

// Crear mapa de m√©todos de env√≠o
const shippingMap = new Map();
(shippingMethods || []).forEach((m) => shippingMap.set(m.id, m));

// A√±adir info de env√≠o a cada pedido
const orders = (ordersRaw || []).map((order) => ({
    ...order,
    shipping_method: shippingMap.get(order.shipping_method_id) || null,
}));

// Funci√≥n para determinar tipo de env√≠o
function getShippingType(order: any): "express" | "standard" | "pickup" {
    const method = order.shipping_method;
    if (!method) return "standard";

    const name = method.name?.toLowerCase() || "";

    // Recogida en tienda
    if (
        name.includes("recoger") ||
        name.includes("tienda") ||
        method.cost === 0
    ) {
        return "pickup";
    }

    // Express (24-48h)
    if (name.includes("express") || (method.min_days && method.min_days <= 2)) {
        return "express";
    }

    // Est√°ndar
    return "standard";
}

// Funci√≥n de ordenamiento: primero los que necesitan atenci√≥n (paid), luego los listos/enviados
// Dentro de cada grupo, ordenar de m√°s viejo a m√°s nuevo
function sortByPriorityAndDate(a: any, b: any) {
    // Prioridad: paid = 0 (primero), ready_for_pickup/shipped = 1 (despu√©s)
    const priorityA = a.status === "paid" ? 0 : 1;
    const priorityB = b.status === "paid" ? 0 : 1;

    if (priorityA !== priorityB) {
        return priorityA - priorityB; // paid primero
    }

    // Dentro del mismo grupo, ordenar por fecha (m√°s viejo primero)
    return new Date(a.created_at).getTime() - new Date(b.created_at).getTime();
}

// Separar pedidos por tipo y ordenar por prioridad
const expressOrders = orders
    .filter((o) => getShippingType(o) === "express" && o.status !== "delivered")
    .sort(sortByPriorityAndDate);

const standardOrders = orders
    .filter(
        (o) => getShippingType(o) === "standard" && o.status !== "delivered",
    )
    .sort(sortByPriorityAndDate);

const pickupOrders = orders
    .filter((o) => getShippingType(o) === "pickup" && o.status !== "delivered")
    .sort(sortByPriorityAndDate);

// Pedidos entregados (completados)
const deliveredOrders = orders.filter((o) => o.status === "delivered");

// Obtener pedidos hist√≥ricos para la tabla
let queryBuilder = supabase
    .from("orders")
    .select("*, order_items(*)")
    .in("status", ["delivered", "cancelled"]);

if (searchId) {
    queryBuilder = queryBuilder.eq("id", parseInt(searchId));
}
if (filterStatus) {
    queryBuilder = queryBuilder.eq("status", filterStatus);
}

const { data: allOrdersRaw } = await queryBuilder
    .order("created_at", { ascending: false })
    .limit(100);

const allOrders = (allOrdersRaw || []).map((order) => ({
    ...order,
    shipping_method: shippingMap.get(order.shipping_method_id) || null,
}));

const statusLabels: Record<string, string> = {
    pending: "Pendiente de Pago",
    paid: "Pagado - Preparar",
    ready_for_pickup: "Listo",
    shipped: "Enviado",
    delivered: "Entregado",
    cancelled: "Cancelado",
};

const statusColors: Record<string, string> = {
    pending: "bg-yellow-100 text-yellow-800",
    paid: "bg-blue-100 text-blue-800",
    ready_for_pickup: "bg-orange-100 text-orange-800",
    shipped: "bg-purple-100 text-purple-800",
    delivered: "bg-green-100 text-green-800",
    cancelled: "bg-red-100 text-red-800",
};

// Calcular totales
const totalPending =
    expressOrders.filter((o) => o.status === "paid").length +
    standardOrders.filter((o) => o.status === "paid").length +
    pickupOrders.filter((o) => o.status === "paid").length;
const totalReady =
    expressOrders.filter(
        (o) => o.status === "ready_for_pickup" || o.status === "shipped",
    ).length +
    standardOrders.filter(
        (o) => o.status === "ready_for_pickup" || o.status === "shipped",
    ).length +
    pickupOrders.filter((o) => o.status === "ready_for_pickup").length;
