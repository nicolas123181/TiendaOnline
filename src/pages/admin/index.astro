<script>
    import Chart from "chart.js/auto";

    // Formatear precio
    function formatPrice(cents: number): string {
        return (cents / 100).toLocaleString("es-ES", {
            style: "currency",
            currency: "EUR",
        });
    }

    // Cargar analytics
    async function loadAnalytics() {
        try {
            const response = await fetch("/api/admin/analytics");
            const data = await response.json();

            if (!data.success) {
                console.error("Error loading analytics:", data.error);
                return;
            }

            // Actualizar KPIs
            const monthlySalesEl = document.getElementById("kpi-monthly-sales");
            const pendingOrdersEl =
                document.getElementById("kpi-pending-orders");
            const topProductEl = document.getElementById("kpi-top-product");
            const topProductSoldEl = document.getElementById(
                "kpi-top-product-sold",
            );
            const chartTotalEl = document.getElementById("chart-total");

            if (monthlySalesEl) {
                monthlySalesEl.textContent = formatPrice(
                    data.kpis.monthlySales,
                );
            }

            if (pendingOrdersEl) {
                pendingOrdersEl.textContent =
                    data.kpis.pendingOrders.toString();
            }

            if (topProductEl && data.kpis.topProduct) {
                topProductEl.textContent = data.kpis.topProduct.name;
                if (topProductSoldEl) {
                    topProductSoldEl.textContent = `${data.kpis.topProduct.sold} vendidos este mes`;
                }
            } else if (topProductEl) {
                topProductEl.textContent = "Sin ventas";
                if (topProductSoldEl) {
                    topProductSoldEl.textContent = "A√∫n no hay ventas este mes";
                }
            }

            // Total de los √∫ltimos 7 d√≠as
            const weekTotal = data.salesChart.data.reduce(
                (sum: number, val: number) => sum + val,
                0,
            );
            if (chartTotalEl) {
                chartTotalEl.textContent = `Total: ${formatPrice(weekTotal)}`;
            }

            // Renderizar gr√°fico
            const canvas = document.getElementById(
                "salesChart",
            ) as HTMLCanvasElement;
            if (canvas) {
                const ctx = canvas.getContext("2d");
                if (ctx) {
                    new Chart(ctx, {
                        type: "bar",
                        data: {
                            labels: data.salesChart.labels,
                            datasets: [
                                {
                                    label: "Ventas (‚Ç¨)",
                                    data: data.salesChart.data.map(
                                        (v: number) => v / 100,
                                    ),
                                    backgroundColor: "rgba(124, 58, 237, 0.8)",
                                    borderColor: "rgba(124, 58, 237, 1)",
                                    borderWidth: 2,
                                    borderRadius: 8,
                                    borderSkipped: false,
                                },
                            ],
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: {
                                    display: false,
                                },
                                tooltip: {
                                    backgroundColor: "#1a2744",
                                    titleColor: "#fff",
                                    bodyColor: "#fff",
                                    padding: 12,
                                    cornerRadius: 8,
                                    displayColors: false,
                                    callbacks: {
                                        label: function (context) {
                                            return formatPrice(
                                                (context.raw as number) * 100,
                                            );
                                        },
                                    },
                                },
                            },
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    grid: {
                                        color: "rgba(0, 0, 0, 0.05)",
                                    },
                                    ticks: {
                                        callback: function (value) {
                                            return formatPrice(
                                                (value as number) * 100,
                                            );
                                        },
                                    },
                                },
                                x: {
                                    grid: {
                                        display: false,
                                    },
                                },
                            },
                        },
                    });
                }
            }
        } catch (error) {
            console.error("Error loading analytics:", error);
        }
    }

    // Cargar al inicializar
    loadAnalytics();
</script>
