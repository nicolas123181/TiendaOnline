    const deleteBtn = document.getElementById("delete-btn");

    // Remove existing image buttons
    document.querySelectorAll(".remove-image").forEach((btn) => {
        btn.addEventListener("click", (e) => {
            const preview = e.target.closest(".image-preview");
            const url = preview?.getAttribute("data-url");
            if (url) {
                uploadedImages = uploadedImages.filter((u) => u !== url);
                preview?.remove();
                imagesInput.value = JSON.stringify(uploadedImages);
                updatePreviewLabels();
            }
        });
    });

    // File upload - browse button
    browseBtn?.addEventListener("click", () => fileInput?.click());

    // Drag & Drop
    dropZone?.addEventListener("dragover", (e) => {
        e.preventDefault();
        dropZone.classList.add("border-brand-navy", "bg-surface-secondary");
    });

    dropZone?.addEventListener("dragleave", () => {
        dropZone.classList.remove("border-brand-navy", "bg-surface-secondary");
    });

    dropZone?.addEventListener("drop", (e) => {
        e.preventDefault();
        dropZone.classList.remove("border-brand-navy", "bg-surface-secondary");
        const files = e.dataTransfer?.files;
        if (files) handleFiles(files);
    });

    fileInput?.addEventListener("change", () => {
        if (fileInput.files) handleFiles(fileInput.files);
    });

    async function handleFiles(files) {
        if (uploadedImages.length >= 5) {
            alert("M√°ximo 5 im√°genes por producto");
            return;
        }

        if (isUploading) {
            alert("Espera a que termine la subida actual");
            return;
        }

        const filesToUpload = Array.from(files).slice(
            0,
            5 - uploadedImages.length,
        );

        for (const file of filesToUpload) {
            if (!file.type.startsWith("image/")) {
                alert(`${file.name} no es una imagen v√°lida`);
                continue;
            }
            if (file.size > 5 * 1024 * 1024) {
                alert(`${file.name} es demasiado grande. M√°ximo 5MB.`);
                continue;
            }
            await uploadToCloudinary(file);
        }
    }

    async function uploadToCloudinary(file) {
        isUploading = true;
        showUploadingIndicator();

        try {
            const formData = new FormData();
            formData.append("file", file);

            const response = await fetch("/api/upload-image", {
                method: "POST",
                body: formData,
            });

            const result = await response.json();

            if (!response.ok) {
                throw new Error(result.error || "Error al subir la imagen");
            }

            uploadedImages.push(result.url);
            imagesInput.value = JSON.stringify(uploadedImages);
            addImagePreview(result.url, uploadedImages.length - 1);
        } catch (error) {
            console.error("Error uploading image:", error);
            alert(
                `Error al subir ${file.name}: ${error instanceof Error ? error.message : "Error desconocido"}`,
            );
        } finally {
            isUploading = false;
            hideUploadingIndicator();
        }
    }

    function showUploadingIndicator() {
        const indicator = document.createElement("div");
        indicator.id = "upload-indicator";
        indicator.className =
            "fixed inset-0 bg-black/50 flex items-center justify-center z-50";
        indicator.innerHTML = `
            <div class="bg-white rounded-2xl p-8 text-center shadow-lg">
                <div class="w-12 h-12 border-4 border-brand-navy border-t-transparent rounded-full animate-spin mx-auto mb-4"></div>
                <p class="text-brand-navy font-medium">Subiendo imagen...</p>
                <p class="text-sm text-text-muted mt-1">Por favor, espera</p>
            </div>
        `;
        document.body.appendChild(indicator);
    }

    function hideUploadingIndicator() {
        document.getElementById("upload-indicator")?.remove();
    }

    function addImagePreview(url, index) {
        if (!previewsContainer) return;

        const div = document.createElement("div");
        div.className =
            "relative aspect-square rounded-xl overflow-hidden bg-surface-tertiary group image-preview";
        div.setAttribute("data-url", url);
        div.innerHTML = `
            <img src="${url}" alt="Imagen ${index + 1}" class="w-full h-full object-cover" />
            <button type="button" class="remove-image absolute top-2 right-2 p-1.5 bg-status-error text-white rounded-lg opacity-0 group-hover:opacity-100 transition-opacity">
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
            ${index === 0 ? '<span class="principal-label absolute bottom-2 left-2 px-2 py-1 bg-brand-navy text-white text-xs rounded">Principal</span>' : ""}
        `;

        const removeBtn = div.querySelector(".remove-image");
        removeBtn?.addEventListener("click", () => {
            uploadedImages = uploadedImages.filter((u) => u !== url);
            div.remove();
            imagesInput.value = JSON.stringify(uploadedImages);
            updatePreviewLabels();
        });

        previewsContainer.appendChild(div);
    }

    function updatePreviewLabels() {
        const previews = previewsContainer?.querySelectorAll(".image-preview");
        previews?.forEach((preview, index) => {
            const existingLabel = preview.querySelector(".principal-label");
            if (index === 0 && !existingLabel) {
                const label = document.createElement("span");
                label.className =
                    "principal-label absolute bottom-2 left-2 px-2 py-1 bg-brand-navy text-white text-xs rounded";
                label.textContent = "Principal";
                preview.appendChild(label);
            } else if (index !== 0 && existingLabel) {
                existingLabel.remove();
            }
        });
    }

    // Delete confirmation
    deleteBtn?.addEventListener("click", (e) => {
        if (
            !confirm(
                "¬øEst√°s seguro de que quieres eliminar este producto? Esta acci√≥n no se puede deshacer.",
            )
        ) {
            e.preventDefault();
        }
    });

    // Flash Sale toggle
    const saleToggle = document.getElementById("is_on_sale");
    const saleFields = document.getElementById("sale-fields");

    saleToggle?.addEventListener("change", () => {
        if (saleFields) {
            if (saleToggle.checked) {
                saleFields.classList.remove(
                    "opacity-50",
                    "pointer-events-none",
                );
            } else {
                saleFields.classList.add("opacity-50", "pointer-events-none");
            }
        }
    });

    // ====== STOCK POR TALLAS ======
    const sizeInputs = document.querySelectorAll(".size-stock-input");
    const sizesStockInput = document.getElementById("sizes-stock-input");
    const totalStockBadge = document.getElementById("total-stock-badge");

    function updateSizesStock() {
        const sizesData = [];
        let totalStock = 0;

        sizeInputs.forEach((input) => {
            const size = input.getAttribute("data-size");
            const stock = parseInt(input.value) || 0;
            sizesData.push({ size, stock });
            totalStock += stock;
        });

        // Actualizar hidden input
        if (sizesStockInput) {
            sizesStockInput.value = JSON.stringify(sizesData);
        }

        // Actualizar badge de stock total
        if (totalStockBadge) {
            totalStockBadge.textContent = `Total: ${totalStock}`;

            // Cambiar color seg√∫n stock
            if (totalStock === 0) {
                totalStockBadge.className =
                    "px-3 py-1 bg-red-100 text-red-700 rounded-full text-sm font-semibold";
            } else if (totalStock < 10) {
                totalStockBadge.className =
                    "px-3 py-1 bg-yellow-100 text-yellow-700 rounded-full text-sm font-semibold";
            } else {
                totalStockBadge.className =
                    "px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-sm font-semibold";
            }
        }
    }

    // A√±adir listeners a cada input de talla
    sizeInputs.forEach((input) => {
        input.addEventListener("input", updateSizesStock);
        input.addEventListener("change", updateSizesStock);
    });

    // Inicializar
    updateSizesStock();
</script>
