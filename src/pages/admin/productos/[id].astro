---
import AdminLayout from "../../../layouts/AdminLayout.astro";
import {
    supabase,
    getCategories,
    getProductSizes,
    updateProductSizes,
    type Product,
    type SizeStock,
} from "../../../lib/supabase";
import { slugify, formatPrice, getSizesForCategory } from "../../../lib/utils";

// SSR
export const prerender = false;

const { id } = Astro.params;

// Obtener producto
const { data: product, error: fetchError } = await supabase
    .from("products")
    .select("*, category:categories(*)")
    .eq("id", id)
    .single();

if (fetchError || !product) {
    return Astro.redirect("/admin/productos");
}

const categories = await getCategories();

// Obtener stock por tallas
const productSizes = await getProductSizes(Number(id));

// Determinar tallas seg√∫n categor√≠a
const categorySlug = product.category?.slug || "";
const availableSizes = getSizesForCategory(categorySlug);

// Crear mapa de stock por talla
const sizeStockMap: Record<string, number> = {};
productSizes.forEach((ps) => {
    sizeStockMap[ps.size] = ps.stock;
});

// Preparar datos de tallas para el formulario
const sizesData: SizeStock[] = availableSizes.map((size) => ({
    size,
    stock: sizeStockMap[size] || 0,
}));

let success = false;
let error = "";

// Procesar actualizaci√≥n
if (Astro.request.method === "POST") {
    try {
        const formData = await Astro.request.formData();
        const action = formData.get("action")?.toString();

        if (action === "delete") {
            // Eliminar producto
            const { error: deleteError } = await supabase
                .from("products")
                .delete()
                .eq("id", id);

            if (deleteError) {
                error = `Error al eliminar: ${deleteError.message}`;
            } else {
                return Astro.redirect("/admin/productos?deleted=true");
            }
        } else {
            // Actualizar producto
            const name = formData.get("name")?.toString() || "";
            const description = formData.get("description")?.toString() || "";
            const priceStr = formData.get("price")?.toString() || "0";
            const price = Math.round(parseFloat(priceStr) * 100);
            const category_id = parseInt(
                formData.get("category_id")?.toString() || "0",
            );
            const featured = formData.get("featured") === "on";
            const imagesStr = formData.get("images")?.toString() || "[]";

            // Procesar stock por tallas
            const sizesJson = formData.get("sizes_stock")?.toString() || "[]";
            let sizesStock: SizeStock[] = [];
            try {
                sizesStock = JSON.parse(sizesJson);
            } catch {
                sizesStock = [];
            }

            // Calcular stock total desde las tallas
            const totalStock = sizesStock.reduce((sum, s) => sum + s.stock, 0);

            // Campos de oferta flash
            const is_on_sale = formData.get("is_on_sale") === "on";
            const salePriceStr = formData.get("sale_price")?.toString() || "";
            const sale_price =
                is_on_sale && salePriceStr
                    ? Math.round(parseFloat(salePriceStr) * 100)
                    : null;
            const saleEndsStr = formData.get("sale_ends_at")?.toString() || "";
            const sale_ends_at =
                is_on_sale && saleEndsStr
                    ? new Date(saleEndsStr).toISOString()
                    : null;

            let images: string[] = [];
            try {
                images = JSON.parse(imagesStr);
            } catch {
                images = product.images || [];
            }

            const slug = slugify(name);

            // Validaciones
            if (!name.trim()) {
                error = "El nombre del producto es obligatorio";
            } else if (price <= 0) {
                error = "El precio debe ser mayor que 0";
            } else if (!category_id) {
                error = "Debes seleccionar una categor√≠a";
            } else if (is_on_sale && (!sale_price || sale_price >= price)) {
                error =
                    "El precio de oferta debe ser menor que el precio original";
            } else {
                // Primero actualizar producto
                const { error: updateError } = await supabase
                    .from("products")
                    .update({
                        name,
                        slug,
                        description,
                        price,
                        sale_price,
                        is_on_sale,
                        sale_ends_at,
                        stock: totalStock,
                        category_id,
                        featured,
                        images,
                        updated_at: new Date().toISOString(),
                    })
                    .eq("id", id);

                if (updateError) {
                    error = `Error al actualizar: ${updateError.message}`;
                } else {
                    // Actualizar stock por tallas
                    const sizesUpdated = await updateProductSizes(
                        Number(id),
                        sizesStock,
                    );

                    if (!sizesUpdated) {
                        error =
                            "Producto actualizado pero hubo un error al guardar el stock por tallas";
                    } else {
                        success = true;
                    }

                    // Recargar datos del producto
                    const { data: updatedProduct } = await supabase
                        .from("products")
                        .select("*, category:categories(*)")
                        .eq("id", id)
                        .single();

                    if (updatedProduct) {
                        Object.assign(product, updatedProduct);
                    }
                }
            }
        }
    } catch (e) {
        error = "Ha ocurrido un error inesperado.";
        console.error(e);
    }
}

// Convertir precio de c√©ntimos a euros para el formulario
const priceInEuros = (product.price / 100).toFixed(2);
const salePriceInEuros = product.sale_price
    ? (product.sale_price / 100).toFixed(2)
    : "";
