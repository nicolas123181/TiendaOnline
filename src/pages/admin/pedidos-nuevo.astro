---
import AdminLayout from "../../layouts/AdminLayout.astro";
import { getOrders, updateOrderStatus } from "../../lib/supabase";
import { formatPrice } from "../../lib/utils";

// SSR
export const prerender = false;

let success = false;
let error = "";

// Procesar cambio de estado si hay POST
if (Astro.request.method === "POST") {
    try {
        const formData = await Astro.request.formData();
        const orderId = parseInt(formData.get("order_id")?.toString() || "0");
        const newStatus = formData.get("status")?.toString() as any;

        if (orderId && newStatus) {
            const result = await updateOrderStatus(orderId, newStatus);
            if (result) {
                success = true;
            } else {
                error = "Error al actualizar el pedido";
            }
        }
    } catch (e) {
        error = "Error procesando la solicitud";
        console.error(e);
    }
}

// Obtener pedidos
const orders = await getOrders();

const statusLabels: Record<string, string> = {
    pending: "Pendiente de Pago",
    paid: "Pagado",
    shipped: "Enviado",
    delivered: "Entregado",
    cancelled: "Cancelado",
};

const statusColors: Record<string, string> = {
    pending: "bg-yellow-100 text-yellow-800",
    paid: "bg-blue-100 text-blue-800",
    shipped: "bg-purple-100 text-purple-800",
    delivered: "bg-green-100 text-green-800",
    cancelled: "bg-red-100 text-red-800",
};
---

<AdminLayout title="Gestión de Pedidos">
    {success && (
        <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-xl">
            <p class="text-green-700 text-sm flex items-center gap-2">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                Pedido actualizado correctamente
            </p>
        </div>
    )}

    {error && (
        <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-xl">
            <p class="text-red-700 text-sm flex items-center gap-2">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
                {error}
            </p>
        </div>
    )}

    <!-- Stats Grid -->
    <div class="grid grid-cols-2 lg:grid-cols-5 gap-4 mb-8">
        <div class="bg-white rounded-xl p-4 shadow-sm border border-gray-100">
            <p class="text-2xl font-bold text-gray-900">{orders.length}</p>
            <p class="text-xs text-gray-600 mt-1">Total Pedidos</p>
        </div>
        <div class="bg-white rounded-xl p-4 shadow-sm border border-gray-100">
            <p class="text-2xl font-bold text-yellow-600">{orders.filter(o => o.status === "pending").length}</p>
            <p class="text-xs text-gray-600 mt-1">Pendientes</p>
        </div>
        <div class="bg-white rounded-xl p-4 shadow-sm border border-gray-100">
            <p class="text-2xl font-bold text-blue-600">{orders.filter(o => o.status === "paid").length}</p>
            <p class="text-xs text-gray-600 mt-1">Pagados</p>
        </div>
        <div class="bg-white rounded-xl p-4 shadow-sm border border-gray-100">
            <p class="text-2xl font-bold text-purple-600">{orders.filter(o => o.status === "shipped").length}</p>
            <p class="text-xs text-gray-600 mt-1">Enviados</p>
        </div>
        <div class="bg-white rounded-xl p-4 shadow-sm border border-gray-100">
            <p class="text-2xl font-bold text-green-600">{orders.filter(o => o.status === "delivered").length}</p>
            <p class="text-xs text-gray-600 mt-1">Entregados</p>
        </div>
    </div>

    <!-- Orders Table -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="p-6 border-b border-gray-200">
            <h2 class="text-lg font-bold text-gray-900">
                Todos los Pedidos
            </h2>
        </div>

        {orders.length > 0 ? (
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-50 border-b border-gray-200">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Pedido</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Cliente</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Email</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Fecha</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Total</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase">Estado</th>
                            <th class="px-6 py-3 text-right text-xs font-semibold text-gray-700 uppercase">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        {orders.map((order) => (
                            <tr class="hover:bg-gray-50 transition-colors">
                                <td class="px-6 py-4">
                                    <a href={`/admin/pedidos/${order.id}`} class="font-mono font-semibold text-amber-600 hover:text-amber-700">
                                        #{order.id.toString().padStart(5, '0')}
                                    </a>
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-900">{order.customer_name}</td>
                                <td class="px-6 py-4 text-sm text-gray-600">{order.customer_email}</td>
                                <td class="px-6 py-4 text-sm text-gray-600">
                                    {new Date(order.created_at).toLocaleDateString('es-ES')}
                                </td>
                                <td class="px-6 py-4 text-sm font-semibold text-gray-900">
                                    {formatPrice(order.total)}
                                </td>
                                <td class="px-6 py-4">
                                    <span class={`inline-block px-3 py-1 text-xs font-semibold rounded-full ${statusColors[order.status]}`}>
                                        {statusLabels[order.status]}
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-right">
                                    <div class="flex items-center gap-2 justify-end">
                                        <a 
                                            href={`/admin/pedidos/${order.id}`}
                                            class="px-3 py-1 text-xs font-medium bg-gray-100 hover:bg-gray-200 text-gray-700 rounded transition-colors"
                                        >
                                            Ver
                                        </a>
                                        {order.status !== 'cancelled' && order.status !== 'delivered' && (
                                            <form method="POST" class="inline">
                                                <input type="hidden" name="order_id" value={order.id} />
                                                <select 
                                                    name="status"
                                                    onchange="if(this.value) this.parentElement.submit()"
                                                    class="text-xs px-2 py-1 border border-gray-300 rounded bg-white hover:border-gray-400 cursor-pointer"
                                                >
                                                    <option value="">Cambiar estado</option>
                                                    {Object.entries(statusLabels).map(([key, label]) => (
                                                        order.status !== key && <option value={key}>{label}</option>
                                                    ))}
                                                </select>
                                            </form>
                                        )}
                                    </div>
                                </td>
                            </tr>
                        ))}
                    </tbody>
                </table>
            </div>
        ) : (
            <div class="p-12 text-center">
                <svg class="w-12 h-12 text-gray-300 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
                </svg>
                <p class="text-gray-500 text-sm">No hay pedidos registrados aún</p>
            </div>
        )}
    </div>
</AdminLayout>
