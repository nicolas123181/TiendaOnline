---
interface Props {
    variant?: "primary" | "secondary" | "outline" | "ghost";
    size?: "sm" | "md" | "lg";
    href?: string;
    type?: "button" | "submit" | "reset";
    disabled?: boolean;
    fullWidth?: boolean;
    class?: string;
}

const {
    variant = "primary",
    size = "md",
    href,
    type = "button",
    disabled = false,
    fullWidth = false,
    class: className = "",
} = Astro.props;

const baseStyles =
    "inline-flex items-center justify-center font-medium transition-all duration-200 focus:outline-none focus-visible:ring-2 focus-visible:ring-brand-navy focus-visible:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed";

const variants = {
    primary:
        "bg-brand-navy text-white hover:bg-brand-navy-light active:scale-[0.98]",
    secondary:
        "bg-brand-leather text-white hover:bg-brand-leather-dark active:scale-[0.98]",
    outline:
        "border-2 border-brand-navy text-brand-navy hover:bg-brand-navy hover:text-white",
    ghost: "text-text-secondary hover:text-brand-navy hover:bg-surface-tertiary",
};

const sizes = {
    sm: "px-4 py-2 text-sm rounded-lg gap-1.5",
    md: "px-6 py-3 text-sm rounded-xl gap-2",
    lg: "px-8 py-4 text-base rounded-xl gap-2.5",
};

const widthClass = fullWidth ? "w-full" : "";

const classes = `${baseStyles} ${variants[variant]} ${sizes[size]} ${widthClass} ${className}`;
---

{
    href ? (
        <a href={href} class={classes}>
            <slot />
        </a>
    ) : (
        <button type={type} disabled={disabled} class={classes}>
            <slot />
        </button>
    )
}
