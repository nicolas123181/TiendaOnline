---
import BaseLayout from "./BaseLayout.astro";
import CartSlideOver from "../components/ui/CartSlideOver.astro";
import CartIcon from "../components/islands/CartIcon";
import { getCategories } from "../lib/supabase";

interface Props {
    title: string;
    description?: string;
}

const { title, description } = Astro.props;
const categories = await getCategories();
const currentPath = Astro.url.pathname;
---

<BaseLayout title={title} description={description}>
    <!-- Header -->
    <header
        class="sticky top-0 z-40 bg-white/95 backdrop-blur-md border-b border-gray-100"
    >
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16 lg:h-20">
                <!-- Logo -->
                <a href="/" class="flex items-center group">
                    <span
                        class="text-xl lg:text-2xl font-light tracking-[0.3em] text-gray-900 group-hover:text-gray-600 transition-colors"
                    >
                        VANTAGE
                    </span>
                </a>

                <!-- Navigation Desktop -->
                <nav class="hidden lg:flex items-center gap-10">
                    <a
                        href="/"
                        class={`text-xs tracking-widest uppercase font-medium transition-colors hover:text-gray-600 ${currentPath === "/" ? "text-gray-900" : "text-gray-500"}`}
                    >
                        Inicio
                    </a>
                    <a
                        href="/productos"
                        class={`text-xs tracking-widest uppercase font-medium transition-colors hover:text-gray-600 ${currentPath.startsWith("/productos") ? "text-gray-900" : "text-gray-500"}`}
                    >
                        Colección
                    </a>

                    <!-- Dropdown Categorías -->
                    <div class="relative group">
                        <button
                            class="text-xs tracking-widest uppercase font-medium text-gray-500 hover:text-gray-900 transition-colors flex items-center gap-1"
                        >
                            Categorías
                            <svg
                                class="w-3 h-3 transition-transform group-hover:rotate-180"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M19 9l-7 7-7-7"></path>
                            </svg>
                        </button>

                        <div
                            class="absolute top-full left-0 pt-4 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200"
                        >
                            <div
                                class="bg-white shadow-lg border border-gray-100 py-3 min-w-[180px]"
                            >
                                {
                                    categories.map((category) => (
                                        <a
                                            href={`/categoria/${category.slug}`}
                                            class="block px-5 py-2 text-xs tracking-wider uppercase text-gray-500 hover:bg-gray-50 hover:text-gray-900 transition-colors"
                                        >
                                            {category.name}
                                        </a>
                                    ))
                                }
                            </div>
                        </div>
                    </div>
                </nav>

                <!-- Actions -->
                <div class="flex items-center gap-3">
                    <!-- User/Profile Button -->
                    <a
                        href="/perfil"
                        id="user-btn"
                        class="p-2 text-text-secondary hover:text-brand-navy transition-colors relative"
                        aria-label="Mi cuenta"
                    >
                        <svg
                            class="w-6 h-6"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                            ></path>
                        </svg>
                    </a>

                    <!-- Cart Icon (React Island) -->
                    <CartIcon client:load />

                    <!-- Mobile Menu Button -->
                    <button
                        id="mobile-menu-btn"
                        class="lg:hidden p-2 text-text-secondary hover:text-brand-navy transition-colors"
                        aria-label="Abrir menú"
                    >
                        <svg
                            class="w-6 h-6"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>

        <!-- Mobile Navigation -->
        <div
            id="mobile-menu"
            class="hidden lg:hidden border-t border-border-light"
        >
            <div class="px-4 py-4 space-y-3">
                <a
                    href="/"
                    class="block py-2 text-text-secondary hover:text-brand-navy"
                    >Inicio</a
                >
                <a
                    href="/productos"
                    class="block py-2 text-text-secondary hover:text-brand-navy"
                    >Todos los productos</a
                >
                <a
                    href="/perfil"
                    class="block py-2 text-text-secondary hover:text-brand-navy"
                    >Mi Cuenta</a
                >
                <div class="border-t border-border-light pt-3 mt-3">
                    <p
                        class="text-xs font-medium text-text-muted uppercase tracking-wider mb-2"
                    >
                        Categorías
                    </p>
                    {
                        categories.map((category) => (
                            <a
                                href={`/categoria/${category.slug}`}
                                class="block py-2 text-text-secondary hover:text-brand-navy"
                            >
                                {category.name}
                            </a>
                        ))
                    }
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="min-h-screen">
        <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-brand-navy text-text-inverse">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
                <!-- Brand -->
                <div class="lg:col-span-1">
                    <h3
                        class="text-2xl font-light tracking-[0.3em] text-white mb-2"
                    >
                        VANTAGE
                    </h3>
                    <p class="text-sm text-gray-400 tracking-wider mb-4">
                        Est. 2024
                    </p>
                    <p class="text-gray-400 text-sm leading-relaxed">
                        Moda masculina premium con estilo sofisticado. Calidad
                        excepcional para el hombre moderno.
                    </p>
                </div>

                <!-- Links -->
                <div>
                    <h4 class="font-semibold mb-4 text-brand-cream">Tienda</h4>
                    <ul class="space-y-2">
                        <li>
                            <a
                                href="/productos"
                                class="text-gray-400 hover:text-white text-sm transition-colors"
                                >Todos los productos</a
                            >
                        </li>
                        {
                            categories.slice(0, 4).map((category) => (
                                <li>
                                    <a
                                        href={`/categoria/${category.slug}`}
                                        class="text-gray-400 hover:text-white text-sm transition-colors"
                                    >
                                        {category.name}
                                    </a>
                                </li>
                            ))
                        }
                    </ul>
                </div>

                <div>
                    <h4 class="font-semibold mb-4 text-brand-cream">
                        Información
                    </h4>
                    <ul class="space-y-2">
                        <li>
                            <a
                                href="/sobre-nosotros"
                                class="text-gray-400 hover:text-white text-sm transition-colors"
                                >Sobre nosotros</a
                            >
                        </li>
                        <li>
                            <a
                                href="/envios-devoluciones"
                                class="text-gray-400 hover:text-white text-sm transition-colors"
                                >Envíos y devoluciones</a
                            >
                        </li>
                        <li>
                            <a
                                href="/privacidad"
                                class="text-gray-400 hover:text-white text-sm transition-colors"
                                >Política de privacidad</a
                            >
                        </li>
                        <li>
                            <a
                                href="/terminos"
                                class="text-gray-400 hover:text-white text-sm transition-colors"
                                >Términos y condiciones</a
                            >
                        </li>
                    </ul>
                </div>

                <!-- Contact -->
                <div>
                    <h4 class="font-semibold mb-4 text-brand-cream">
                        Contacto
                    </h4>
                    <ul class="space-y-2 text-sm text-gray-400">
                        <li class="flex items-center gap-2">
                            <svg
                                class="w-4 h-4"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                ></path>
                            </svg>
                            info@vantage.com
                        </li>
                        <li class="flex items-center gap-2">
                            <svg
                                class="w-4 h-4"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                                ></path>
                            </svg>
                            +34 900 123 456
                        </li>
                    </ul>

                    <!-- Social -->
                    <div class="flex gap-4 mt-6">
                        <a
                            href="#"
                            class="p-2 bg-brand-navy-light rounded-lg hover:bg-brand-leather transition-colors"
                        >
                            <svg
                                class="w-5 h-5"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"
                                ></path>
                            </svg>
                        </a>
                        <a
                            href="#"
                            class="p-2 bg-brand-navy-light rounded-lg hover:bg-brand-leather transition-colors"
                        >
                            <svg
                                class="w-5 h-5"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                                ></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Copyright -->
            <div
                class="border-t border-brand-navy-light mt-12 pt-8 text-center text-sm text-gray-500"
            >
                <p>
                    &copy; {new Date().getFullYear()} Vantage. Todos los derechos
                    reservados.
                </p>
            </div>
        </div>
    </footer>

    <!-- Cart Slide Over -->
    <CartSlideOver />

    <!-- Mobile Menu Script -->
    <script>
        const mobileMenuBtn = document.getElementById("mobile-menu-btn");
        const mobileMenu = document.getElementById("mobile-menu");

        mobileMenuBtn?.addEventListener("click", () => {
            mobileMenu?.classList.toggle("hidden");
        });
    </script>
</BaseLayout>
