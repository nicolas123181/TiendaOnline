---
import BaseLayout from "./BaseLayout.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;

// Navigation items del admin
const navItems = [
    { href: "/admin", label: "Dashboard", icon: "home" },
    { href: "/admin/productos", label: "Productos", icon: "package" },
    { href: "/admin/categorias", label: "Categorías", icon: "folder" },
    { href: "/admin/tallas", label: "Tallas", icon: "ruler" },
    { href: "/admin/pedidos", label: "Pedidos", icon: "shopping-bag" },
    { href: "/admin/devoluciones", label: "Devoluciones", icon: "return" },
    { href: "/admin/facturas", label: "Facturas", icon: "receipt" },
    { href: "/admin/usuarios", label: "Usuarios", icon: "users" },
    { href: "/admin/cupones", label: "Cupones", icon: "tag" },
    { href: "/admin/newsletter", label: "Newsletter", icon: "mail" },
    { href: "/admin/configuracion", label: "Configuración", icon: "settings" },
];

function isActive(href: string): boolean {
    if (href === "/admin") return currentPath === "/admin";
    return currentPath.startsWith(href);
}
---

<BaseLayout title={`Admin - ${title}`}>
    <div class="min-h-screen bg-surface-secondary flex">
        <!-- Sidebar -->
        <aside
            class="hidden lg:flex lg:flex-col lg:w-64 lg:fixed lg:inset-y-0 bg-brand-navy"
        >
            <!-- Logo -->
            <div
                class="flex items-center h-16 px-6 border-b border-brand-navy-light"
            >
                <a
                    href="/admin"
                    class="text-xl font-serif font-bold text-white"
                >
                    VANTAGE
                </a>
                <span
                    class="ml-2 px-2 py-0.5 text-xs font-medium bg-brand-leather/20 text-brand-leather rounded"
                    >Admin</span
                >
            </div>

            <!-- Navigation -->
            <nav class="flex-1 px-4 py-6 space-y-1">
                {
                    navItems.map((item) => (
                        <a
                            href={item.href}
                            class={`flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-medium transition-colors ${
                                isActive(item.href)
                                    ? "bg-brand-leather text-white"
                                    : "text-gray-300 hover:bg-brand-navy-light hover:text-white"
                            }`}
                        >
                            {item.icon === "home" && (
                                <svg
                                    class="w-5 h-5"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                                    />
                                </svg>
                            )}
                            {item.icon === "package" && (
                                <svg
                                    class="w-5 h-5"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"
                                    />
                                </svg>
                            )}
                            {item.icon === "shopping-bag" && (
                                <svg
                                    class="w-5 h-5"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"
                                    />
                                </svg>
                            )}
                            {item.icon === "settings" && (
                                <svg
                                    class="w-5 h-5"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
                                    />
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                                    />
                                </svg>
                            )}
                            {item.icon === "mail" && (
                                <svg
                                    class="w-5 h-5"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                    />
                                </svg>
                            )}
                            {item.icon === "folder" && (
                                <svg
                                    class="w-5 h-5"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"
                                    />
                                </svg>
                            )}
                            {item.icon === "ruler" && (
                                <svg
                                    class="w-5 h-5"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M6 6L3 9m0 0l3 3m-3-3h18M18 18l3-3m0 0l-3-3m3 3H3"
                                    />
                                </svg>
                            )}
                            {item.icon === "users" && (
                                <svg
                                    class="w-5 h-5"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
                                    />
                                </svg>
                            )}
                            {item.icon === "tag" && (
                                <svg
                                    class="w-5 h-5"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"
                                    />
                                </svg>
                            )}
                            {item.icon === "receipt" && (
                                <svg
                                    class="w-5 h-5"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                                    />
                                </svg>
                            )}
                            {item.icon === "return" && (
                                <svg
                                    class="w-5 h-5"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"
                                    />
                                </svg>
                            )}
                            {item.label}
                        </a>
                    ))
                }
            </nav>

            <!-- User Section -->
            <div class="p-4 border-t border-brand-navy-light">
                <button
                    id="logout-btn"
                    type="button"
                    class="flex items-center gap-3 w-full px-4 py-3 rounded-lg text-sm font-medium text-gray-300 hover:bg-red-500/20 hover:text-red-400 transition-colors"
                >
                    <svg
                        class="w-5 h-5"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"
                        ></path>
                    </svg>
                    Cerrar Sesión
                </button>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="lg:pl-64 flex-1">
            <!-- Top Bar Mobile -->
            <header
                class="lg:hidden sticky top-0 z-40 flex items-center h-16 px-4 bg-brand-navy"
            >
                <button id="admin-menu-btn" class="p-2 text-white">
                    <svg
                        class="w-6 h-6"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
                <span class="ml-4 text-lg font-serif font-bold text-white">
                    VANTAGE
                </span>
            </header>

            <!-- Page Content -->
            <main class="p-4 sm:p-6 lg:p-8">
                <!-- Page Header -->
                <div class="mb-8">
                    <h1
                        class="text-2xl lg:text-3xl font-serif font-bold text-brand-navy"
                    >
                        {title}
                    </h1>
                </div>

                <slot />
            </main>
        </div>

        <!-- Mobile Sidebar Overlay -->
        <div
            id="admin-mobile-overlay"
            class="hidden fixed inset-0 z-50 lg:hidden"
        >
            <div class="absolute inset-0 bg-black/50" id="admin-overlay-bg">
            </div>
            <aside
                class="absolute inset-y-0 left-0 w-64 bg-brand-navy animate-slide-in-left"
            >
                <!-- Same content as desktop sidebar -->
                <div
                    class="flex items-center h-16 px-6 border-b border-brand-navy-light"
                >
                    <span class="text-xl font-serif font-bold text-white">
                        VANTAGE<span
                            class="text-brand-leather ml-2 text-xs font-sans"
                            >Admin</span
                        >
                    </span>
                </div>
                <nav class="px-4 py-6 space-y-1">
                    {
                        navItems.map((item) => (
                            <a
                                href={item.href}
                                class={`flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-medium transition-colors ${
                                    isActive(item.href)
                                        ? "bg-brand-leather text-white"
                                        : "text-gray-300 hover:bg-brand-navy-light hover:text-white"
                                }`}
                            >
                                {item.label}
                            </a>
                        ))
                    }
                </nav>

                <!-- Mobile Logout Button -->
                <div
                    class="absolute bottom-0 left-0 right-0 p-4 border-t border-brand-navy-light"
                >
                    <button
                        id="logout-btn-mobile"
                        type="button"
                        class="flex items-center gap-3 w-full px-4 py-3 rounded-lg text-sm font-medium text-gray-300 hover:bg-red-500/20 hover:text-red-400 transition-colors"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"
                            ></path>
                        </svg>
                        Cerrar Sesión
                    </button>
                </div>
            </aside>
        </div>
    </div>

    <script>
        const menuBtn = document.getElementById("admin-menu-btn");
        const overlay = document.getElementById("admin-mobile-overlay");
        const overlayBg = document.getElementById("admin-overlay-bg");

        menuBtn?.addEventListener("click", () => {
            overlay?.classList.remove("hidden");
        });

        overlayBg?.addEventListener("click", () => {
            overlay?.classList.add("hidden");
        });

        // Logout handler
        const logoutBtn = document.getElementById("logout-btn");
        logoutBtn?.addEventListener("click", async () => {
            const btn = logoutBtn as HTMLButtonElement;
            btn.disabled = true;
            btn.innerHTML = `
                <svg class="w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                Cerrando sesión...
            `;

            try {
                const response = await fetch("/api/auth/logout", {
                    method: "POST",
                });
                if (response.redirected) {
                    window.location.href = response.url;
                } else {
                    window.location.href = "/";
                }
            } catch (error) {
                console.error("Logout error:", error);
                window.location.href = "/";
            }
        });

        // Logout handler for mobile
        const logoutBtnMobile = document.getElementById("logout-btn-mobile");
        logoutBtnMobile?.addEventListener("click", async () => {
            try {
                await fetch("/api/auth/logout", { method: "POST" });
                window.location.href = "/";
            } catch (error) {
                console.error("Logout error:", error);
                window.location.href = "/";
            }
        });
    </script>

    <style is:global>
        /* =====================================================
           ADMIN PANEL - MOBILE RESPONSIVE OVERRIDES
           Applied globally to ALL admin pages
           ===================================================== */

        @media (max-width: 768px) {
            /* ---- LAYOUT ---- */
            /* Reduce main padding on mobile */
            .lg\:pl-64 main {
                padding: 0.75rem !important;
            }

            /* Page header - smaller title */
            .lg\:pl-64 main > div:first-child h1 {
                font-size: 1.25rem !important;
            }

            /* ---- GRIDS & CARDS ---- */
            /* Force all stat grids to 2 columns max on mobile */
            .lg\:pl-64 .grid[class*="lg:grid-cols-4"],
            .lg\:pl-64 .grid[class*="lg:grid-cols-5"],
            .lg\:pl-64 .grid[class*="md:grid-cols-3"],
            .lg\:pl-64 .grid[class*="md:grid-cols-2"] {
                grid-template-columns: repeat(2, minmax(0, 1fr)) !important;
                gap: 0.5rem !important;
            }

            /* Single column for 2-panel layouts */
            .lg\:pl-64
                .grid[class*="lg:grid-cols-2"]:not([class*="grid-cols-2"]) {
                grid-template-columns: 1fr !important;
            }

            /* Reduce card padding */
            .lg\:pl-64 .rounded-2xl[class*="p-6"],
            .lg\:pl-64 .rounded-xl[class*="p-6"] {
                padding: 0.75rem !important;
            }

            .lg\:pl-64 .rounded-xl[class*="p-4"] {
                padding: 0.625rem !important;
            }

            /* ---- TYPOGRAPHY ---- */
            /* Shrink large stat numbers */
            .lg\:pl-64 .text-3xl {
                font-size: 1.25rem !important;
                line-height: 1.75rem !important;
            }

            .lg\:pl-64 .text-2xl {
                font-size: 1.125rem !important;
                line-height: 1.5rem !important;
            }

            .lg\:pl-64 .text-xl {
                font-size: 1rem !important;
                line-height: 1.5rem !important;
            }

            .lg\:pl-64 .text-lg {
                font-size: 0.9375rem !important;
                line-height: 1.375rem !important;
            }

            /* ---- ORDER CARDS ---- */
            /* Stack order card layouts on mobile */
            .lg\:pl-64 [data-order-id] > .flex.items-start.justify-between {
                flex-direction: column !important;
                gap: 0.75rem !important;
            }

            .lg\:pl-64 [data-order-id] > .flex > .text-right {
                text-align: left !important;
                display: flex !important;
                flex-wrap: wrap !important;
                align-items: center !important;
                gap: 0.5rem !important;
                width: 100% !important;
            }

            .lg\:pl-64 [data-order-id] > .flex > .text-right > p:first-child {
                font-size: 1.125rem !important;
            }

            /* Order card buttons full width */
            .lg\:pl-64 [data-order-id] button {
                width: 100% !important;
                margin-top: 0.5rem !important;
            }

            /* Order info flex items - wrap on mobile */
            .lg\:pl-64 [data-order-id] .flex.items-center.gap-3 {
                flex-wrap: wrap !important;
                gap: 0.375rem !important;
            }

            /* Font mono order IDs smaller */
            .lg\:pl-64 .font-mono.font-bold.text-lg {
                font-size: 0.875rem !important;
            }

            /* ---- TABLES ---- */
            /* Ensure horizontal scroll on tables */
            .lg\:pl-64 .overflow-x-auto {
                -webkit-overflow-scrolling: touch;
            }

            .lg\:pl-64 table {
                font-size: 0.8125rem !important;
            }

            .lg\:pl-64 table th,
            .lg\:pl-64 table td {
                padding: 0.5rem 0.375rem !important;
                white-space: nowrap;
            }

            /* Hide less important table columns on mobile */
            .lg\:pl-64 table th:nth-child(n + 5),
            .lg\:pl-64 table td:nth-child(n + 5) {
                display: none;
            }

            /* ---- HEADERS & FLEX LAYOUTS ---- */
            /* Stack header flex items */
            .lg\:pl-64 .flex.items-center.justify-between {
                flex-wrap: wrap !important;
                gap: 0.5rem !important;
            }

            /* Section headers - allow wrapping */
            .lg\:pl-64 h2.flex {
                flex-wrap: wrap !important;
                font-size: 0.9375rem !important;
            }

            /* ---- FORMS ---- */
            /* Full width select on mobile */
            .lg\:pl-64 select {
                width: 100% !important;
            }

            /* ---- CHARTS ---- */
            /* Reduce chart heights */
            .lg\:pl-64 canvas {
                max-height: 180px !important;
            }

            /* ---- BUTTONS ---- */
            /* Action links/buttons more tappable */
            .lg\:pl-64 a[class*="rounded-xl"],
            .lg\:pl-64 button[class*="rounded-xl"],
            .lg\:pl-64 button[class*="rounded-lg"] {
                min-height: 44px;
            }

            /* ---- SPACING ---- */
            /* Reduce section margins */
            .lg\:pl-64 section.mb-10 {
                margin-bottom: 1.5rem !important;
            }

            .lg\:pl-64 .mb-8 {
                margin-bottom: 1rem !important;
            }

            .lg\:pl-64 .mb-6 {
                margin-bottom: 0.75rem !important;
            }

            /* ---- SHIPPING MODAL ---- */
            .lg\:pl-64 #shipping-modal > div > div {
                margin: 0.5rem !important;
                max-height: 95vh;
                overflow-y: auto;
            }
        }

        /* Extra small screens (< 400px) */
        @media (max-width: 400px) {
            .lg\:pl-64 .grid[class*="lg:grid-cols-4"],
            .lg\:pl-64 .grid[class*="lg:grid-cols-5"] {
                grid-template-columns: 1fr !important;
            }
        }
    </style>
</BaseLayout>
